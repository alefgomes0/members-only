doctype html
html(lang='en')
  head
    title Members Only
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheet/styles.css')
  body
    header 
      h1
        a(href="/")= "Members Only"
      div(class="buttons-container")
        if currentUser && !currentUser.is_member
          a(href="/member")
            button Become a member
        if !currentUser
          a(href="/register")
            button Register

        if currentUser
          a(href="/logout")
            button Logout
        else
          a(href="/login")
            button Login
    main
      block content
    footer